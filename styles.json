{
  "ignoreCursor": {
    "pointerEvents": "none",
    "userSelect": "none",
    "cursor": "default"
  },
  "useCursor": {
    "pointerEvents": "auto",
    "userSelect": "auto",
    "cursor": "auto"
  },
  "dateTime": {
    "color": "<color.dateTime>",
    "fontFamily": "<font.dateTime>",
    "textAlign": "center",
    "lineHeight": 1
  },
  "time": {
    "fontSize": "120px",
    "letterSpacing": "0.05em",
    "textShadow": "4px 4px <color.shadow>",
    "& > span:nth-child(2)": {
      "marginLeft": "0.2em",
      "fontSize": "0.33em",
      "letterSpacing": "0.1em"
    }
  },
  "date": {
    "fontSize": "22px",
    "letterSpacing": "0.1em",
    "textShadow": "3px 3px <color.shadow>"
  },
  "search": {
    "marginTop": "48px",
    "borderRadius": "20px",
    "overflow": "hidden",
    "color": "<color.search.text>",
    "backgroundColor": "<color.search.background>",
    "fontFamily": "<font.search>",
    "boxShadow": "0 4px 8px 0 <color.shadow>, 0 6px 20px 0 <color.shadow>"
  },
  "searchBar": {
    "width": "540px",
    "height": "40px",
    "display": "flex",
    "& > button": {
      "margin": 0,
      "padding": 0,
      "width": "40px",
      "background": "none",
      "outline": "none",
      "border": "none",
      "& > img": {
        "width": "16px",
        "height": "16px",
        "padding": "12px",
        "filter": "<color.search.icon>"
      }
    },
    "& > input[type='search']": {
      "margin": 0,
      "padding": "0 12px 0 0",
      "outline": "none",
      "border": "none",
      "background": "none",
      "color": "inherit",
      "flexGrow": 1,
      "fontSize": "19px",
      "&::placeholder": {
        "color": "<color.search.placeholder>"
      }
    }
  },
  "searchSuggestions": {
    "listStyleType": "none",
    "margin": 0,
    "padding": 0,
    "&:before": {
      "content": "''",
      "display": "block",
      "width": "calc(100% - 40px)",
      "marginLeft": "20px",
      "borderTop": "1px solid <color.search.divider>"
    },
    "& > li": {
      "display": "flex",
      "alignItems": "center",
      "margin": 0,
      "padding": "0 12px 0 40px",
      "outline": "none",
      "height": "40px",
      "cursor": "default",
      "fontSize": "16px",
      "transition": "background-color 0.15s ease-in",
      "&:hover, &:active, &:focus": {
        "backgroundColor": "<color.search.backgroundHover>"
      },
      "&.fromHistory": {
        "color": "<color.search.textAccent>"
      }
    }
  }
}
